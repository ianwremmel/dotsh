{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": false,
    "target": "es2016",
    "types": ["node"]
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}
